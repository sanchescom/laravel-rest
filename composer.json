{
    "name": "sanchescom/laravel-rest",
    "description": "This library provides tools and interfaces for working with REST API with Models and Collections.",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Alexander Efimov",
            "email": "sanches.com@mail.ru"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Sanchescom\\Rest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sanchescom\\Rest\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text --colors=never",
        "check-style": "./vendor/bin/phpcs -p --standard=PSR2 ./src",
        "fix-style": "./vendor/bin/phpcbf --standard=PSR2 ./src"
    },
    "require": {
        "php": "^7.2|^8.0",
        "laravel/framework": ">=5.8",
        "jenssegers/model": "^1.2",
        "sanchescom/json-helper": "dev-master",
        "guzzlehttp/guzzle": "^6.3|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "mockery/mockery": "^1.2",
        "squizlabs/php_codesniffer": "^3.4",
        "donatj/mock-webserver": "^2.0"
    }
}
